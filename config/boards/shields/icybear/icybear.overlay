/ {
    chosen {
        zmk,kscan = &kscan0;
    };

    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        diode-direction = "col2row";

        col-gpios
            = <&sparkfun_pro_micro_rp2040 1 GPIO_ACTIVE_HIGH> // col 0
            ;

        row-gpios
            = <&sparkfun_pro_micro_rp2040 19 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // row 0
           
            ;
    };
};